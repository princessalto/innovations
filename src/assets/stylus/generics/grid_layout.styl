.grid__layout {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.12);
  width: 100% !important;

  .v-image {
    transition: transform .2s;
  }
}

.grid__layout .v-card.project-card:hover .v-image {
  height: 500px !important;
  -webkit-transform: translate3d(1.42109e -14px, 0px, 0px) scale(1, 1) rotate(0deg);
  transform: translate3d(1.42109e -14px, 0px, 0px) scale(1, 1) rotate(0deg);
  -webkit-transition: width 1s, height 2s;
  -webkit-transition: width 0.3s, height 0.3s;
  transition: width 0.3s, height 0.3s;
  position: absolute;
  bottom: -200px;
  width: 100%;
  background: #2e0069 !important;
}

// show and hide image__text
.grid__layout .v-card .v-image .grid__layout--text {
  visibility: hidden;
  opacity: 0;
  transition: visibility 0s, opacity 0.5s linear;
}

.grid__layout .v-card:hover .v-image .grid__layout--text {
  visibility: visible;
  opacity: 1;
}

#particles-js {
  .grid__layout:hover + .content {
    display: none;
  }
}

.content {
  color: #ffff;
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
  display: block;
}

.fade__gradient--overlay {
  position: absolute;
  bottom: 0;
  background: -webkit-linear-gradient(rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.9) 95%);
  background-image: -ms-linear-gradient(rgba(255, 255, 255, 0) 0%, rgba(179, 179, 179, 0.60) 95%);
  background-image: linear-gradient(rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.60) 95%);
  background-image: -moz-linear-gradient(rgba(255, 255, 255, 0) 0%, rgba(179, 179, 179, 0.60) 95%);
  background-image: -o-linear-gradient(rgba(255, 255, 255, 0) 0%, rgba(179, 179, 179, 0.60) 95%);
  display: block;
  width: 100%;
  z-index: -1;
}
